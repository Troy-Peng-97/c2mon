<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<groupId>cern.c2mon</groupId>
	<artifactId>c2mon-client-ext-dynconfig</artifactId>
	<version>0.1.0-SNAPSHOT</version>
	<packaging>jar</packaging>
	
	<name>C2MON dynamic configuration service</name>
	<description>A dynamic configuration service for C2MON employing URI descriptors</description>

	<dependencies>
		
        <dependency>
            <groupId>cern.c2mon.c2mon-client</groupId>
            <artifactId>c2mon-client-all</artifactId>
            <version>1.7.6-SNAPSHOT</version>
        </dependency>
        <!-- fix for TIMS-1129 - remove later -->
        <!--dependency>
            <groupId>org.hibernate</groupId>
            <artifactId>hibernate-validator</artifactId>
            <version>5.2.2.Final</version>
        </dependency-->
        
        <dependency>
          <groupId>junit</groupId>
          <artifactId>junit</artifactId>
          <version>4.11</version>
          <scope>test</scope>
        </dependency>

        <dependency>
        	<groupId>org.slf4j</groupId>
        	<artifactId>slf4j-api</artifactId>
        	<version>1.7.13</version>
        </dependency>
	</dependencies>	
	
	
	<build>
	    <testResources>
          <testResource>
            <directory>${project.basedir}/src/it/resources</directory>
          </testResource>
         </testResources>
		<plugins>
			
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-compiler-plugin</artifactId>
				<version>3.1</version>
				<configuration>
					<source>1.8</source>
					<target>1.8</target>
				</configuration>
			</plugin>
			<plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-failsafe-plugin</artifactId>
                <version>2.19.1</version>
                <executions>
                  <execution>
                    <goals>
                      <goal>integration-test</goal>
                      <goal>verify</goal>
                    </goals>
                  </execution>
                </executions>
              </plugin>
              <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <version>1.5</version>
                <executions>
                  <execution>
                    <id>add-test-source</id>
                    <phase>process-resources</phase>
                    <goals>
                      <goal>add-test-source</goal>
                    </goals>
                    <configuration>
                      <sources>
                        <source>src/it/java</source>
                      </sources>
                    </configuration>
                  </execution>
                </executions>
              </plugin>
		</plugins>
	</build>
	
    <repositories>
	    <repository>
			<id>beco-dev</id>
			<url>http://artifacts.cern.ch/beco-development-local</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<!-- required for CMW and other libraries that are not publicly mirrored -->
		<repository>
			<id>beco-releases</id>
			<url>http://artifacts.cern.ch/beco-release-local</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>beco-third-party</id>
			<url>http://artifacts.cern.ch/beco-thirdparty-local</url>
			<releases>
				<enabled>true</enabled>
			</releases>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		
	</repositories>

</project>
